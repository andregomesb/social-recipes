<div class="dishes padd">
  <div class="container">
    <div class="row">
      <div class="text-center">
        <h1><%= t('.my_recipes') %></h1>
      </div>
      <%= t("users.show.empty") if @user.recipes.empty? %>
      <% @user.recipes.each do |recipe| %>
      <%= render partial: 'recipes/recipe', locals: { recipe: recipe, crud_buttons: true } %>
      <% end %>
    </div>
  </div>
</div>
