<div class="container">
  <div class="row">
    <div class="chefs padd">
      <div class="col-md-6 col-md-offset-3 col-sm-4">
        <div class="chefs-member">
          <h1>
            <% if current_user == @user %>
            <%= "Bem-vindo #{current_user.name}" %>
            <% else %>
            <%= @user.name %>
            <% end %>
          </h1>
          <span>
            <div class="contact-details">
              <!-- Address / Icon -->
              <%= fa_icon("map-marker", class: "fa-1x") %>
              <span><%= @user.city %></span>
              <div class="clearfix"></div>
              <!-- Email / Icon -->
              <%=link_to "mailto:#{@user.email}" do %>
              <%= fa_icon("envelope-o", class: "fa-1x") %>
              <%=@user.email%>
              <% end %>
              <div class="clearfix"></div>
            </div>
          </span>
          <!-- Social media links -->
          <div class="social">
            <%=link_to_if @user.facebook, "http://facebook.com/#{@user.facebook}", class:"facebook" do %>
            <%= fa_icon("facebook-square", class: "fa-2x") %>
            <% end %>
            <%=link_to_if @user.twitter, "http://twitter.com/#{@user.twitter}", class:"twitter" do %>
            <%= fa_icon("twitter", class: "fa-2x") %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="dishes padd">
  <div class="container">
    <div class="default-heading">
      <!-- Crown image -->
      <%= image_tag("crown.png", class: "img-responsive" )%>
      <!-- Heading -->
      <h2>Receitas de <%= @user.name%></h2>
      <!-- Border -->
      <div class="border"></div>
    </div>
    <div class="row">
      <%= render @user.recipes %>
    </div>

    <div class="default-heading">
      <!-- Crown image -->
      <%= image_tag("crown.png", class: "img-responsive" )%>
      <!-- Heading -->
      <h2>Favoritos de <%= @user.name%></h2>
      <!-- Border -->
      <div class="border"></div>
    </div>
    <div class="row">
      <%= render @favorites %>
    </div>
  </div>
</div>
