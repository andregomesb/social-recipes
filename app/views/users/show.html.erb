<div class="row">
  <div class="col-md-4">
    <h1>
      <% if current_user == @user %>
        <%=  "Bem-vindo #{current_user.name}" %>
      <% else %>
        <%= @user.name %>
      <%end %>
    </h1>

    <section class="user_info">
      <%= @user.email %>
      <%= @user.city %>
    </section>
  </div>

  <div class="col-md-8">
    <h2>Receitas de <%= @user.name%></h2>
    <%= render @user.recipes %>
  </div>
</div>
