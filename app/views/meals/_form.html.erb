<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-12">
    <%= form_for @meal do |f| %>
    <fieldset class="form-group">
      <%= f.label :name %>
      <%= render partial: 'form_notification', locals: {object: @meal, field: :name} %>
      <%= f.text_field :name, class: "form-control" %>
      <p class="help-block"><em>
        <%= t(:select_meals_example, scope:[:select_prompt])%>
      </em></p>
    </fieldset>
    <%= f.submit class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
