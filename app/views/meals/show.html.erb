<h1>
  <%= @meal.name %>
  <% if logged_in? && authorize?(current_user) %>
    <%= link_to 'Editar', edit_meal_path(@meal), class: "btn btn-warning" %>
    <%= link_to 'Deletar', meal_path(@meal), method: :delete, class: "btn btn-danger" %>
  <% end %>
</h1>
<div class="row">
<%= t(".empty") if @meal.recipes.empty? %>
<% @meal.recipes.each do |recipe| %>
    <div class="col-md-6">
      <%= render partial: 'recipes/recipe', locals: { recipe: recipe } %>
    </div>
<% end %>
</div>
