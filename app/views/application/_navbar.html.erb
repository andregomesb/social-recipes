<div class="header">
  <div class="container">
    <div class="header-top">
      <div class="row">
        <div class="col-md-2 col-sm-4">
          <!-- phone icon -->
          <div class="header-contact">
            <span><i class="fa fa-phone red"></i> <%= t('.telephone') %></span>
          </div>
        </div>
        <div class="col-md-4 col-sm-4">
          <!-- search bar -->
          <%=  render 'search' %>
        </div>
        <div class="col-md-6 col-sm-4">
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <% if admin? %>
                <li><%= link_to t('.create_cuisine'), new_cuisine_path %></li>
                <li><%= link_to t('.create_meal'), new_meal_path %></li>
              <% end %>
              <li><%= link_to t('.create_recipe'), new_recipe_path %></li>
              <li><%= link_to t('.my_recipes'), recipes_user_path(current_user) %></li>
              <li><%= link_to t('.settings'), edit_user_path(current_user) %></li>
              <li><%= link_to t('.exit'), logout_path, method: :delete %></li>
            <% else %>
              <li><%= link_to t('.login'), login_path %></li>
              <li><%= link_to t('.signup'), signup_path %></li>
            <% end %>
          </ul>
          <div class="clearfix"></div>
        </div>
      </div> <!-- .row end -->
    </div> <!-- .header-top end -->
    <div class="row">
      <div class="col-md-4 col-sm-5">
        <!-- Link -->
        <%= link_to root_path do %>
        <div class="logo">
          <%= image_tag("logo.png", alt: "logo") %>
          <!-- Heading -->
          <h1><%= t(:app_title) %></h1>
          <!-- Paragraph -->
          <p>Facility ester expedite instinct.</p>
        </div>
        <% end %>
      </div>

      <div class="col-md-8 col-sm-6">
        <nav class="navbar navbar-default navbar-right" role="navigation">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-menu">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navigation-menu">
              <ul class="nav navbar-nav">
                <% if logged_in? %>
                <li>
                  <%= link_to current_user do %>
                  <%= image_tag("nav-menu/nav1.jpg", class: "img-responsive" )%>
                  <%=current_user.name %>
                  <% end %>
                </li>
                <% end %>
                <li class="dropdown">
                  <%= link_to '#', class: 'dropdown-toggle', data:{toggle: 'dropdown'} do %>
                  <%= image_tag("nav-menu/nav4.jpg", class: "img-responsive" )%>
                  <%=t('.cuisines')%><b class="caret"></b>
                  <% end %>
                  <ul class="dropdown-menu">
                    <% cuisine_menu.each do |cuisine_item| %>
                      <li><%= link_to cuisine_item.name, cuisine_item %></li>
                    <% end %>
                  </ul>
                </li>
                <li class="dropdown">
                  <%= link_to '#', class: 'dropdown-toggle', data:{toggle: 'dropdown'} do %>
                  <%= image_tag("nav-menu/nav2.jpg", class: "img-responsive" )%>
                  <%=t('.meals')%><b class="caret"></b>
                  <% end %>
                  <ul class="dropdown-menu">
                    <% meal_menu.each do |meal_item| %>
                      <li><%= link_to meal_item.name, meal_item %></li>
                    <% end %>
                  </ul>
                </li>
              </ul> <!-- .nav-bar / menus end -->
            </div>
          </div> <!-- .container-fluid end -->
        </nav> <!-- .nav end -->
      </div> <!-- .col links end -->
    </div> <!-- .row end -->
  </div> <!-- .container end -->
</div> <!-- .header end -->
