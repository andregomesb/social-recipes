<div class="row">

  <%= render 'aside' %>

  <div class="col-md-5 col-sm-12 latest-recipes">
    <h1>Ãšltimas receitas</h1>

    <% @recipes.each do |recipe| %>
      <div class="row">
        <div class="col-md-6 image-display">
         <%= image_tag recipe.recipe_image.url(:thumb)%>
        </div>

        <div class="col-md-6">
          <%= render recipe %>
        </div>
      </div>
    <% end %>
  </div>
  <% if @favorites %>
    <div class="col-md-4 col-sm-12">
      <h1>Receitas favoritas</h1>
      <% @favorites.each do |favorite| %>
        <div class="row">
          <div class="col-md-6 image-display">
           <%= image_tag favorite.recipe_image.url(:thumb)%>
          </div>

          <div class="col-md-6">
            <%= render favorite %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
