<h1>
<%= @cuisine.name %>
<% if logged_in? && authorize?(current_user) %>
<%= link_to 'Editar', edit_cuisine_path(@cuisine), class: "btn btn-warning" %>
<%= link_to 'Deletar', cuisine_path(@cuisine), method: :delete, class: "btn btn-danger" %>
<% end %>
</h1>
<div class="row">
<%= t(".empty") if @cuisine.recipes.empty? %>
<% @cuisine.recipes.each do |recipe| %>
    <div class="col-md-6">
      <%= render partial: 'recipes/recipe', locals: { recipe: recipe } %>
    </div>
<% end %>
</div>
