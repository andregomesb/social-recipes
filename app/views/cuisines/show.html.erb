<div class="text-center">
<h1>
  <%= @cuisine.name %>
  <% if logged_in? && authorize?(current_user) %>
    <p>
    <%= link_to 'Editar', edit_cuisine_path(@cuisine), class:"btn btn-warning btn-xs" %>
    <%= link_to 'Deletar', cuisine_path(@cuisine), method: :delete, class:"btn btn-danger btn-xs" %>
    </p>
  <% end %>
</h1>
</div>
<div class="dishes padd">
  <div class="container">
    <div class="row">
      <%= t(".empty") if @cuisine.recipes.empty? %>
      <% @cuisine.recipes.each do |recipe| %>
        <%= render partial: 'recipes/recipe', locals: { recipe: recipe } %>
      <% end %>
    </div>
  </div>
</div>
